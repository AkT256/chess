mode = input("Режим (chess/checkers): ").lower().strip()
custom = False
if mode == 'chess':
    custom = input("Доп. фигуры (y/n): ").lower().strip() == 'y'
Game(mode if mode in ['chess','checkers'] else 'chess', custom).play()
